<h1 class="text-center mt-4">Articles list</h1>


<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <div class="card bg-dark text-center text-white rounded">
          <div class="card-header fst-italic">
            by <span class="user-name">John Doe</span>
          </div>
          <div class="card-body">
            <h5 class="article-title"><%= link_to article.title, article_path(article)%></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to 'View', article_path(article), class: "btn btn-primary"%>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-success"%>
            <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger"%>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago |</small>
            <small>Updated <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>