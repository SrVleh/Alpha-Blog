
<h1 class="text-center mt-4"><%= @article.title %></h1>

<div class="row justify-content-center">
  <div class="col-6 mt-4">
    <div class="card bg-dark text-center text-white rounded">
      <div class="card-header fst-italic">
        by <span class="user-name"><%= @article.user.username %></span>
      </div>
      <div class="card-body">
        <div class="card-text mb-4"><%= simple_format(@article.description) %></div>
        <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-success"%>
          <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger"%>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(@article.created_at) %> ago |</small>
        <small>Updated <%= time_ago_in_words(@article.updated_at) %> ago</small>
      </div>
    </div>

    <%= link_to 'Return to article listing', articles_path, class: "btn btn-primary mt-4" %>

  </div>
</div>









