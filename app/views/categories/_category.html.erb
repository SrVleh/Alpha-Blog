<% @categories.each do |category| %>
  <div class="row justify-content-center">
    <div class="col-6 mt-4">
      <div class="card bg-dark text-center text-white rounded">
        <div class="card-body">
          <h5 class="article-title"><%= link_to category.name, category_path(category)%></h5>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(category.created_at) %> ago |</small>
          <small>Updated <%= time_ago_in_words(category.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
<% end %>
