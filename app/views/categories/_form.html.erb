<%= render 'shared/errors', obj:@category %>

<div class="container">
  <%= form_with(model: @category, local: true) do |f| %>
    <div class="mb-3">
      <label for="formGroupTitle" class="form-label text-white">Category name</label>
      <%= f.text_field :name, class: "form-control", id: "formGroupTitle", placeholder: "Name"%>
    </div>

    <%= f.submit class: "btn btn-success"%>
    <%= link_to 'Cancel', categories_path, class: "btn btn-danger" %>
  <% end %>
</div>