<div class="container">
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="mb-3">
      <label for="formGroupTitle" class="form-label text-white">Username</label>
      <%= f.text_field :username, class: "form-control", id: "formGroupTitle", placeholder: "Username"%>
    </div>
    <div class="mb-3">
      <label for="formGroupDescription" class="form-label text-white">Email</label>
      <%= f.email_field :email, class: "form-control", id: "formGroupDescription", placeholder: "username@gmail.com"%>
    </div>
    <div class="mb-3">
      <label for="formGroupDescription" class="form-label text-white">Password</label>
      <%= f.password_field :password, class: "form-control", id: "formGroupDescription", placeholder: "not12345"%>
    </div>
    <%= f.submit class: "btn btn-success" %>
    <%= link_to 'Cancel', users_path, class: "btn btn-danger" %>
  <% end %>
</div>