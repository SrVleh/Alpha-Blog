<h1 class="text-center mt-4">Users list</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<% @users.each do |user| %>
  <div class="row justify-content-center">
    <div class="col-6 mt-4">
      <div class="card bg-dark text-center text-white rounded">
        <div class="card-header fst-italic">
          <span class="user-name"> <%= link_to user.username, user %> </span>
        </div>
        <div class="card-body">
          <%= link_to gravatar_for(user, size: 100), user, class: "d-flex justify-content-center"%>
          <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
          <%= link_to 'View profile', user, class: "btn btn-primary"%>
          <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-success"%>
        </div>
        <div class="card-footer text-muted">
          <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>
