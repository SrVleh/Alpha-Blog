<h1 class="text-center mt-4"><%= @user.username %>'s  profile</h1>

<%= gravatar_for @user, size: 100 %>

<div class="text-center mt-4">
  <% if logged_in? && @user == current_user %>
    <%= link_to "Edit your profile", edit_user_path(current_user), class: "btn btn-outline-info" %>
    <%= link_to "Delete profile", user_path(current_user), class: "btn btn-outline-danger",
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your profile?" } %>
  <% end %>
</div>

<h2 class="text-center mt-5 text-white">Articles</h2>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mt-4">
  <%= will_paginate @articles, :container => false %>
</div>

